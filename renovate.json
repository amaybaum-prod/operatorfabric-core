{
  "extends": [
    "config:base",
    ":gitSignOff",
    ":switchToGradleLite",
    "schedule:nonOfficeHours"
  ],
  "branchPrefix": "FE-Renovate",
  "prConcurrentLimit": 7,
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**"
  ],
  "gradle-lite": {
    "fileMatch": ["versions.properties"]
  },
  "packageRules": [
    {
      "groupName": "angular",
      "matchPackagePrefixes": [
        "@angular/",
        "@angular-devkit/"
      ]
    }
  ]
}
